{
  "name": "client-desktop",
  "version": "0.0.44",
  "main": "src/index.js",
  "license": "MIT",
  "build": {
    "appId": "xyz.hyalus",
    "productName": "Hyalus",
    "extraMetadata": {
      "name": "Hyalus"
    },
    "win": {
      "target": "nsis",
      "artifactName": "HyalusDesktop-win32.exe"
    },
    "mac": {
      "target": "zip",
      "category": "public.app-category.social-networking",
      "artifactName": "HyalusDesktop-osx.zip"
    },
    "linux": {
      "target": "AppImage",
      "category": "Internet",
      "artifactName": "HyalusDesktop-linux.AppImage"
    },
    "files": [
      "src",
      "build",
      "resources"
    ],
    "directories": {
      "buildResources": "resources"
    },
    "publish": {
      "provider": "github",
      "repo": "hyalus",
      "owner": "hyalusapp",
      "vPrefixedTagName": false,
      "releaseType": "release"
    }
  },
  "scripts": {
    "clean": "rm -rf build dist",
    "build": "yarn clean && webpack && electron-builder -wml",
    "release": "yarn build -p always",
    "dev": "yarn dev:main & yarn dev:renderer",
    "dev:main": "NODE_ENV=development nodemon -w src --exec electron .",
    "dev:renderer": "NODE_ENV=development webpack  --mode development --watch",
    "start": "electron ."
  },
  "devDependencies": {
    "electron": "12.0.4",
    "electron-builder": "^22.10.5",
    "nodemon": "^2.0.7",
    "postcss-loader": "^5.2.0"
  },
  "dependencies": {
    "@hyalusapp/wasm-rnnoise": "^1.0.0",
    "electron-updater": "^4.3.8"
  }
}
